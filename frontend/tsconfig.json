{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build/",               // path to output directory
    "sourceMap": true,                  // allow sourcemap support

    "allowJs": true,                    // allow a partial TypeScript and JavaScript codebase
    "strict":true,                      // enables all strict options
    "allowUnreachableCode": false,      // raise compiler errors about unreachable code
    "exactOptionalPropertyTypes": true, // apply strict rules on optional property handling
    "noFallthroughCasesInSwitch": true, // report errors for fallthrough cases in switch statements
    "noImplicitReturns": true,          // check all code paths in a function to ensure they return a value
    "noUnusedParameters": true,         // report errors on unused parameters in functions

    "lib": ["dom", "dom.iterable", "es2020"],
    "module": "es2020",                 // specify module code generation
    "moduleResolution": "Node",         // specify module resolution startegy
    "jsx": "react-jsx",                 // use typescript to transpile jsx to js
    "target": "es6",                    // specify ECMAScript target version
    "isolatedModules": true,            // warn if code canâ€™t be correctly interpreted by single-file transpilation
    "noEmit": true                      // do not emit compiler output files, e.g. JS source code.
  },
  "include": ["./src/"],
  "exclude": ["node_modules", "build"]
}
